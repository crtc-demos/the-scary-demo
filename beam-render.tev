# Texmap2 is a texture containing separate channels of accumulated "beam"
# brightness: we want the sum of the R, G & B channels. Texcoord0 just maps
# screen coordinates directly to texcoords.

stage 0:
  itexcoord = indmtx0 ** texmap4[texcoord0] * indscale0;
  tev = tev;

stage 1:
  itexcoord = itexcoord + indmtx1 ** texmap2[texcoord0] * indscale1;
  tev = tev;

stage 2:
  tev = texmap3[itexcoord + indmtx2 ** texmap2[texcoord0] * indscale2];
